# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your values

cluster_identifier = "chat-analytics-cluster"
database_name      = "analytics_db"
master_username    = "admin"
master_password    = "YourSecurePassword123!" # Use AWS Secrets Manager in production

# Node configuration - RA3 recommended for high throughput
node_type       = "ra3.4xlarge"
number_of_nodes = 2  # Start with 2, scale up based on workload

# Network configuration
vpc_id    = "vpc-xxxxxxxxxxxxx"
subnet_ids = [
  "subnet-xxxxxxxxxxxxx",  # Private subnet in AZ-1
  "subnet-yyyyyyyyyyyyy"   # Private subnet in AZ-2
]

# Security
allowed_security_group_ids = []  # Add security groups that need access
publicly_accessible        = false
encrypted                  = true
kms_key_id                 = null  # Uses AWS managed key if null
require_ssl                = true

# Backup and maintenance
automated_snapshot_retention_period = 7
preferred_maintenance_window        = "sun:04:00-sun:05:00"
allow_version_upgrade               = true
apply_immediately                   = false

# Logging and monitoring
enable_logging = true

# Performance
enhanced_vpc_routing = true  # Recommended for VPC deployments

# IAM resources
s3_bucket_arn  = "arn:aws:s3:::your-data-lake-bucket"
msk_cluster_arn = "arn:aws:kafka:us-east-1:123456789012:cluster/your-cluster/xxxxx-xxxxx-xxxxx-xxxxx-xxxxx"

# Safety
skip_final_snapshot_on_destroy = false  # Set to true only for dev/test

# Tags
tags = {
  Environment = "production"
  Project     = "chat-analytics"
  ManagedBy   = "terraform"
}

